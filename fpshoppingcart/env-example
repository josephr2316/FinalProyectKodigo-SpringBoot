# MySQL Docker Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=shoppingCartDB
MYSQL_USER=keycloak
MYSQL_PASSWORD=keycloak
MYSQL_PORT=3310
DOCKER_NETWORK=dark-scorpion

# Server Configuration
SERVER_PORT=8080
